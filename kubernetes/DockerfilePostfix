# docker build -f ./kubernetes/DockerfilePostfix -t deathangel908/pychat-postfix .
# docker push deathangel908/pychat-postfix

FROM alpine:3.17.3
RUN apk update && \
    apk add --no-cache postfix policyd-spf-fs

COPY ./kubernetes/postfix/main.cf /etc/postfix/main.cf
COPY ./kubernetes/postfix/master.cf /etc/postfix/master.cf
RUN /usr/bin/newaliases
CMD ["/usr/sbin/postfix", "start-fg"]
